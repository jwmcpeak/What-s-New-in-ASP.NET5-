@model Message

@{
    // ViewBag.Title = "Home Page";
}

<form asp-controller="message" asp-action="edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input type="text" asp-for="Title" class="form-control" placeholder="Message Title" />
    </div>

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" placeholder="Message Content"></textarea>
    </div>

    <input type="submit" value="Submit Changes" />
</form>